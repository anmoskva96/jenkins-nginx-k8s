pipeline {
    agent any

    stages {

        stage('Clone repository') {
            steps {
                git 'https://github.com/anmoskva96/jenkins-nginx-k8s.git'
            }
        }

        stage('Helm install') {
            steps {
                script {
                    sh "pwd"
                    sh "ls"
                    sh "chmod +x jenkins-nginx-k8s/helm-kubectl/helm"
                    sh "mkdir -p ~/.local/bin"
                    sh "mv jenkins-nginx-k8s/helm-kubectl/helm /usr/local/bin/"
                    sh "export PATH=$PATH:/usr/local/bin"
                    sh "helm version"
                }
            }
        }
    }
}
